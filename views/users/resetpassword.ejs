<% layout('layouts/boilerplate') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                  <h1 class="text-center">Reset Password</h1>
                  <br>
                    <form action="/resetpassword" method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username:</label>
                            <input id="username" name="username" type="text" class="form-control" autocomplete="username" required autofocus>
                        </div>
                        <div class="mb-3">
                            <label for="current-password" class="form-label">Current Password:</label>
                            <input id="current-password" name="current-password" type="password" class="form-control" autocomplete="current-password" required>
                        </div>
                        <div class="mb-3">
                            <label for="new-password" class="form-label">New Password:</label>
                            <input id="new-password" name="new-password" type="password" class="form-control" autocomplete="new-password" required>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary" type="submit">Change Password</button>
                        </div>
                    </form>
                    <!-- <div class="mt-3 text-center">
                        <% if (error) { %>
                            <p class="error"><%= error %></p>
                        <% } %>
                        <% if (success) { %>
                            <p class="success"><%= success %></p> -->
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
